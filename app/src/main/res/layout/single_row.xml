<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atmid"
        android:id="@+id/atmId"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bank id"
        android:id="@+id/bankId"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/atmId"
        android:layout_toEndOf="@+id/atmId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAt"
        android:id="@+id/lat"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/bankId"
        android:layout_toEndOf="@+id/bankId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lon"
        android:id="@+id/lon"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lat"
        android:layout_toEndOf="@+id/lat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:id="@+id/status"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lon"
        android:layout_toEndOf="@+id/lon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/button_update"
        android:layout_below="@+id/atmId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:id="@+id/button_delete"
        android:layout_alignTop="@+id/button_update"
         />
</RelativeLayout>